{
  "$schema": "https://claude.ai/schemas/settings.json",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx ts-node .claude/hooks/skill-activation-prompt.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/tsc-check.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(bun *)",
      "Read(.claude/**/*)",
      "Write(.claude/**/*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(*--force*)",
      "Bash(*sudo*)"
    ]
  },
  "projectContext": {
    "stack": ["nodejs", "react", "nextjs", "typescript", "mui", "vercel", "supabase"],
    "conventions": {
      "maxFileLines": 500,
      "skillModularity": true,
      "autoSkillActivation": true
    }
  }
}
